with "apq";
with "apq_provider";
with "kowconfig";
with "kowconfig-text";
with "kowlib";



project KOWEnt is

	version := $version;
	
	for Source_Dirs use ( "src" );
	
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "kowent";
	for Library_Kind use KOWLib'Library_Kind;
	for Library_Version use "libkowent.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

end KOWEnt;

