with "apq";



with "awlib";

project AwEnt is

	version := "0.1.0";
	
	for Source_Dirs use ( "src" );
	
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "awent";
	for Library_Kind use "dynamic";
	for Library_Version use "libawent.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

end AwEnt;

