with "apq";
with "awconfig";
with "awconfig-text";
with "awlib";


with "adaworks_setup";

project AwEnt is

	version := "0.1.0";
	
	type Supported_OS is ("Windows_NT", "GNU/Linux");

	target: Supported_OS := external("OS", "GNU/Linux");

	
	for Source_Dirs use ( "src" );
	
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "awent";
	for Library_Kind use AdaWorks_Setup'Library_Kind;
	for Library_Version use "libawent.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

end AwEnt;

