with APQ_Provider;
with KOW_Config;



package body KOW_Ent.DB is
	procedure Setup is
		-- looks for the kow_ent configuration file and initializes the provider
	begin
		Provider := new APQ_Provider.Connection_Provider_Type;
		Provider.Setup( KOW_Config.New_Config_File( "kow_ent" ) );
	end Setup;
end KOW_Ent.DB;
